  "compilerOptions": {
    "target": "es2016",                                
    "module": "CommonJS",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,       
    "allowJs": true,                              
    "skipLibCheck": true,
    "outDir": "./dist"                                 
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}